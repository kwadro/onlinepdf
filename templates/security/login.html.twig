{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block main %}
    <div class="container">
        <section class="d-flex flex-wrap justify-content-left py-3 mb-4 border-bottom">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-4">
                        <h2 class="w-100 mb-4">{{ 'Login'|trans }}</h2>

                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <form method="post">
                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% else %}

                            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                            <label for="username">Email</label>
                            <input type="email" value="{{ last_username }}" name="_username" id="username" class="mb-1 form-control" autocomplete="email" required autofocus>
                            <label for="password">Password</label>
                            <input type="password" name="_password" id="password" class="mb-3 form-control" autocomplete="current-password" required>
                            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                            {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="checkbox mb-3">
                                <input type="checkbox" name="_remember_me" id="_remember_me">
                                <label for="_remember_me">Remember me</label>
                            </div>
                            #}

                            <button class="btn btn-lg btn-primary" type="submit">
                                Sign in
                            </button>
                            {% endif %}
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>

{% endblock %}
